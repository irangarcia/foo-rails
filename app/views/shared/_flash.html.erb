<% if flash[:notice] %>
  <div class="max-w-6xl bg-green-100 border border-green-400 text-green-600 px-4 py-3 rounded relative text-sm" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="max-w-6xl bg-red-100 border border-red-400 text-red-600 px-4 py-3 rounded relative text-sm" role="alert">
  <%= flash[:alert] %>
  </div>
<% end %>
